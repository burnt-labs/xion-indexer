{
  "name": "xion-indexer",
  "version": "1.0.0",
  "description": "This is the indexer solution for the xion chain",
  "main": "dist/index.js",
  "scripts": {
    "build": "subql build",
    "codegen": "node graph_combiner && subql codegen",
    "start:docker": "docker-compose pull && docker-compose up --remove-orphans",
    "dev": "subql codegen && subql build && docker-compose pull && docker-compose up --remove-orphans",
    "prepack": "rm -rf dist && yarn run build",
    "test": "subql build && subql-node-cosmos test"
  },
  "homepage": "https://github.com/subquery/cosmos-subql-starter",
  "repository": "github:subquery/cosmos-subql-starter",
  "files": [
    "dist",
    "schema.graphql",
    "project.yaml"
  ],
  "author": "Burnt Labs Team",
  "license": "MIT",
  "devDependencies": {
    "@cosmjs/stargate": "^0.28.9",
    "@graphql-tools/graphql-file-loader": "^8.0.0",
    "@graphql-tools/load": "^8.0.0",
    "@subql/cli": "latest",
    "@subql/node-cosmos": "latest",
    "@subql/testing": "latest",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@subql/types-cosmos": "latest",
    "@types/node": "^17.0.21",
    "osmojs": "^15.2.1",
    "pino": "^7.8.0",
    "ts-proto": "^1.112.1",
    "tslib": "^2.3.1"
  }
}
